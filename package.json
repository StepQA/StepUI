{
  "name": "stepui",
  "version": "1.0.0",
  "description": "A UI kit, as used by StepQA",
  "main": "index.js",
  "scripts": {
    "test": "jest --json --outputFile=.jest-test-results.json",
    "storybook": "start-storybook -p $PORT -c .storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stepQA/stepUI.git"
  },
  "jest": {
    "automock": false,
    "browser": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupTestFrameworkScriptFile": "./setupTests.js",
    "moduleDirectories": [
      "node_modules"
    ],
    "transform": {
      "^.+\\.jsx?$": "./node_modules/babel-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": ".*.test.js",
    "testPathIgnorePatterns": [
      ".*.js.snap"
    ],
    "verbose": true
  },
  "author": "elmarti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stepQA/stepUI/issues"
  },
  "homepage": "https://github.com/stepQA/stepUI#readme",
  "devDependencies": {
    "@storybook/react": "^3.4.8",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^23.1.0",
    "jest-styled-components": "^5.0.1",
    "storybook-addon-jest": "0.0.1"
  },
  "dependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "styled-components": "^3.3.3"
  }
}
